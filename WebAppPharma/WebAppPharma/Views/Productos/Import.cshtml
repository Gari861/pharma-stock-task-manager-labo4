@{
    ViewData["Title"] = "Importar Producto";
}
<div class="container mt-5">
    <div class="card shadow-lg border-0">

        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0" style="font-family: 'Segoe UI', sans-serif;">
                <i class="fas fa-file-excel"></i> Importar Productos desde Excel
            </h2>
        </div>
        <div class="card-body p-5">
            <!-- Formulario para importar datos esenciales -->
            <form asp-action="ImportarDatosEsenciales" enctype="multipart/form-data" method="post">
                <h3 class="text-primary text-center">Importar Datos Esenciales</h3>
                <h4 class="text-secondary text-center">Seguir en Excel la siguiente estructura:</h4>
                <table class="table table-bordered">
                    <thead class="thead-dark" style="border: 10px;">
                        <tr>
                            <th>Nombre</th>
                            <th>Cantidad en Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Ibuprofeno 400mg (Caja 20)</td>
                            <td>100</td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold text-primary" for="excelEsencial">Seleccione archivo Excel</label>
                    <input type="file" id="excelEsencial" name="excelFile" accept=".xlsx, .xls" class="form-control" />
                </div>
                <div class="form-group mb-4 text-center">
                    <input type="submit" value="Importar Datos Esenciales" class="btn btn-success btn-lg" />
                </div>
            </form>

            <hr class="mb-5" style="margin: 10px"/>

            <!-- Formulario para importar datos adicionales -->
            <form asp-action="ImportarDatosAdicionales" enctype="multipart/form-data" method="post">
                <h3 class="text-primary text-center">Importar Datos Adicionales</h3>
                <h4 class="text-secondary text-center">Seguir en Excel la siguiente estructura:</h4>
                <table class="table table-bordered">
                    <thead class="thead-dark" style="border: 10px;">
                        <tr>
                            <th>Código Producto (Opcional)</th>
                            <th>Nombre*</th>
                            <th>Precio (Opcional)</th>
                            <th>Cantidad en Stock*</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>PROD001</td>
                            <td>Ibuprofeno 400mg (Caja 20)</td>
                            <td>500.00</td>
                            <td>100</td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold text-primary" for="excelAdicional">Seleccione archivo Excel</label>
                    <input type="file" id="excelAdicional" name="excelFile" accept=".xlsx, .xls" class="form-control" />
                </div>
                <div class="form-group mb-4 text-center">
                    <input type="submit" value="Importar Datos Adicionales" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>

