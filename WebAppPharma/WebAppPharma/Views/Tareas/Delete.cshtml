@model WebAppPharma.Models.Tarea

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">
                <i class="fas fa-trash-alt"></i> Eliminar Tarea
            </h2>
        </div>
        <div class="card-body p-5">
            <h4 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta tarea?</h4>

            <dl class="row">
                <dt class="col-sm-4 font-weight-bold text-primary">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Descripción</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Prioridad</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Prioridad.Tipo)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Estado</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EstadodeTarea.Tipo)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Fecha de Creación</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Fecha Límite</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaLimite)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Asignación</dt>
                <dd class="col-sm-8">
                    @if (Model.TareasEmpleados != null)
                    {
                        @foreach (var tareasEmpleados in Model.TareasEmpleados)
                        {
                            @("-" + tareasEmpleados.Empleado.Nombre + " " + tareasEmpleados.Empleado.Apellido + " ")
                            ;
                        }
                    }
                </dd>

            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdTarea" />
                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-danger px-5 py-2">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-lg btn-secondary ms-3">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
