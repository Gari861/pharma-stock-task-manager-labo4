@model WebAppPharma.Models.UbicacionProducto

@{
    ViewData["Title"] = "Detalles de Ubicación de Producto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h2 class="mb-0" style="font-family: 'Segoe UI', sans-serif;">
                <i class="fas fa-info-circle"></i> Detalles de Ubicación de Producto
            </h2>
        </div>
        <div class="card-body p-5">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold text-primary">Estante</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Estante)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Sección</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Seccion)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Pasillo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Pasillo)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Producto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Producto.Nombre)</dd>
            </dl>
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.IdUbicacion" class="btn btn-lg btn-warning px-4 py-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-lg btn-secondary ms-3">
                    <i class="fas fa-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
