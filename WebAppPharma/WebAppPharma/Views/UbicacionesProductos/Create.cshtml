@model WebAppPharma.Models.UbicacionProducto

@{
    ViewData["Title"] = "Crear Ubicación de Producto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0" style="font-family: 'Segoe UI', sans-serif;">
                <i class="fas fa-plus-circle"></i> Crear Nueva Ubicación de Producto
            </h2>
        </div>
        <div class="card-body p-5">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="Estante" class="form-label font-weight-bold text-primary">Estante</label>
                    <input asp-for="Estante" class="form-control form-control-lg" placeholder="Ingrese el estante" />
                    <span asp-validation-for="Estante" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Seccion" class="form-label font-weight-bold text-primary">Sección</label>
                    <input asp-for="Seccion" class="form-control form-control-lg" placeholder="Ingrese la sección" />
                    <span asp-validation-for="Seccion" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Pasillo" class="form-label font-weight-bold text-primary">Pasillo</label>
                    <input asp-for="Pasillo" class="form-control form-control-lg" placeholder="Ingrese el pasillo" />
                    <span asp-validation-for="Pasillo" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="IdProducto" class="form-label font-weight-bold text-primary">Producto</label>
                    <select asp-for="IdProducto" class="form-control form-control-lg" asp-items="ViewBag.IdProducto"></select>
                    <span asp-validation-for="IdProducto" class="text-danger"></span>
                </div>

                <div class="form-group mb-4 text-center">
                    <input type="submit" value="Guardar Ubicación" class="btn btn-lg btn-success px-5 py-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
