@model WebAppPharma.Models.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0" style="font-family: 'Segoe UI', sans-serif;">
                <i class="fas fa-plus-circle"></i> Crear Nuevo Empleado
            </h2>
        </div>
        <div class="card-body p-5">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="Nombre" class="form-label font-weight-bold text-primary">Nombre</label>
                    <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ingrese el nombre del empleado" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Apellido" class="form-label font-weight-bold text-primary">Apellido</label>
                    <input asp-for="Apellido" class="form-control form-control-lg" placeholder="Ingrese el apellido del empleado" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Dni" class="form-label font-weight-bold text-primary">DNI</label>
                    <input asp-for="Dni" class="form-control form-control-lg" placeholder="Ingrese el DNI del empleado" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Telefono" class="form-label font-weight-bold text-primary">Teléfono</label>
                    <input asp-for="Telefono" class="form-control form-control-lg" placeholder="Ingrese el teléfono del empleado" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="FechaNacimiento" class="form-label font-weight-bold text-primary">Fecha de Nacimiento</label>
                    <input asp-for="FechaNacimiento" class="form-control form-control-lg" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="IdCargo" class="form-label font-weight-bold text-primary">Cargo</label>

                    @if (ViewData["CargosVacios"] != null && (bool)ViewData["CargosVacios"])
                    {
                        <label class="form-label font-weight-bold text-danger"> *Dirígete a Cargos para llenarlo</label>
                    }
                    <select asp-for="IdCargo" class="form-control form-control-lg" asp-items="ViewBag.IdCargo"></select>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="IdEstadodeEmpleado" class="form-label font-weight-bold text-primary">Estado del Empleado</label>

                    @if (ViewData["EstadosDeEmpleadosVacios"] != null && (bool)ViewData["EstadosDeEmpleadosVacios"])
                    {
                        <label class="form-label font-weight-bold text-danger"> *Dirígete a Estados Empleados para llenarlo</label>
                    }
                    <select asp-for="IdEstadodeEmpleado" class="form-control form-control-lg" asp-items="ViewBag.IdEstadodeEmpleado"></select>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Foto" class="form-label font-weight-bold text-primary">Foto del Empleado</label>
                    <img id="imagen" src="" class="rounded-circle img-thumbnail mb-4" style="width: 90px; height: 80px; display: none;" />
                    <input type="file" id="seleccionImg" name="imagen" class="form-control" accept=".jpg,.jpeg,.png" />
                </div>

                <div class="form-group mb-4 text-center">
                    <input type="submit" value="Guardar Empleado" class="btn btn-lg btn-success px-5 py-2 " />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/js/preview.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}
