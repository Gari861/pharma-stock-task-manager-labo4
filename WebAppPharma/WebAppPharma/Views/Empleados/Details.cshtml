@model WebAppPharma.Models.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h2 class="mb-0">
                <i class="fas fa-info-circle"></i> Detalles del Empleado
            </h2>
        </div>
        <div class="card-body p-5">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold text-primary">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Apellido</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">DNI</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Cargo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cargo.Tipo)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Estado</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EstadodeEmpleado.Tipo)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Teléfono</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Fecha de Nacimiento</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Foto</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.Foto))
                    {
                        <img src="~/fotografias/@Model.Foto" class="img-fluid rounded-circle img-thumbnail mb-4" style="width: 90px; height: 80px;" />
                    }
                </dd>
            </dl>

            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model.IdEmpleado" class="btn btn-lg btn-warning px-4 py-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-lg btn-secondary ms-3">
                    <i class="fas fa-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>
