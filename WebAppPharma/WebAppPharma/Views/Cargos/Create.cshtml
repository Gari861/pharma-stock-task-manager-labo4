@model WebAppPharma.Models.Cargo

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Crear Cargo</h1>

<div class="container">
    <h4 class="text-muted">Información del Cargo</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="Tipo" class="form-label" style="font-weight: bold;"></label>
                    <input asp-for="Tipo" class="form-control" placeholder="Ingrese el tipo de cargo" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Crear" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
