@model IEnumerable<WebAppPharma.Models.Cargo>
@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <i class="fas fa-briefcase"></i> GESTIÓN DE CARGOS DE EMPLEADOS
    </h1>

    <p class="text-center">
        <a asp-action="Create" class="btn btn-success btn-lg mb-3" style="background-color: #2ecc71; border: none;">
            <i class="fas fa-plus"></i> Ingresar Nuevo Cargo
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped text-center align-middle">
            <thead class="thead-dark">
                <tr style="border: 1.3px solid black;">
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border: 1px solid #ccc;">
                        <td style="text-transform: uppercase;">@Html.DisplayFor(modelItem => item.Tipo)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdCargo" class="btn btn-warning btn-sm me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdCargo" class="btn btn-info btn-sm me-2">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdCargo" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



