@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5 text-center">
    <div class="row">
        <div class="col-12">
            <i class="fas fa-exclamation-triangle text-danger fa-5x"></i>
            <h1 class="text-danger mt-4">¡Ups! Ocurrió un error.</h1>
            <h2 class="text-muted">Algo salió mal mientras procesábamos tu solicitud.</h2>
        </div>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="row mt-4">
            <div class="col-12">
                <p class="lead">
                    <strong>ID de solicitud:</strong> <code>@Model.RequestId</code>
                </p>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="alert alert-danger text-center">
                <h4 class="alert-heading">¡Oops! Algo salió mal.</h4>
                <p>Parece que ha ocurrido un problema inesperado. Estamos trabajando para solucionarlo.</p>
                <hr>
                <p class="mb-0">
                    Si necesitas ayuda, por favor contáctanos en: <a href="mailto:tupharma@gmail.com">tupharma@gmail.com</a> o visita nuestra <a href="/Home/Privacy">Política de Privacidad</a> para más información.
                </p>
            </div>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-12">
            <a href="javascript:history.back()" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Volver a la página principal
            </a>
        </div>
    </div>
</div>
