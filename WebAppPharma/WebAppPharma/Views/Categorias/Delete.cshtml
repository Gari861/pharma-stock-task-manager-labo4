@model WebAppPharma.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">
                <i class="fas fa-trash-alt"></i> Eliminar Categoría
            </h2>
        </div>
        <div class="card-body p-5">
            <h4 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta categoría?</h4>

            <dl class="row">
                <dt class="col-sm-4 font-weight-bold text-primary">Tipo de Categoría</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCategoria" />
                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-danger px-5 py-2">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-lg btn-secondary ms-3">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
