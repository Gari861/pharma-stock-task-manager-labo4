@model WebAppPharma.Models.EstadodeEmpleado

@{
    ViewData["Title"] = "Editar Estado de Empleado";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-white text-center">
            <h2 class="mb-0">
                <i class="fas fa-edit"></i> Editar Estado de Empleado
            </h2>
        </div>
        <div class="card-body p-5">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="IdEstadodeEmpleado" />

                <div class="mb-4">
                    <label asp-for="Tipo" class="form-label font-weight-bold text-primary">Tipo de Estado</label>
                    <input asp-for="Tipo" class="form-control form-control-lg" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-warning px-5 py-2">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-lg btn-secondary ms-3">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
