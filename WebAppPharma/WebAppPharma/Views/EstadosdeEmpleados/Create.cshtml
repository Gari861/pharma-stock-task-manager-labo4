@model WebAppPharma.Models.EstadodeEmpleado

@{
    ViewData["Title"] = "Crear Estado de Empleado";
}

<h1 class="text-center">Crear Estado de Empleado</h1>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0" style="font-family: 'Segoe UI', sans-serif;">
                <i class="fas fa-plus-circle"></i> Crear Nuevo Estado de Empleado
            </h2>
        </div>
        <div class="card-body p-5">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="Tipo" class="form-label font-weight-bold text-primary">Tipo de Estado</label>
                    <input asp-for="Tipo" class="form-control form-control-lg" placeholder="Ingrese el estado del empleado" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="form-group mb-4 text-center">
                    <input type="submit" value="Guardar Estado" class="btn btn-lg btn-success px-5 py-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
