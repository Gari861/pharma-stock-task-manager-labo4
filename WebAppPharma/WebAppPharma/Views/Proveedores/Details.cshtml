@model WebAppPharma.Models.Proveedor

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h2 class="mb-0">
                <i class="fas fa-info-circle"></i> Detalles del Proveedor
            </h2>
        </div>
        <div class="card-body p-5">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold text-primary">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Apellido</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-4 font-weight-bold text-primary">Teléfono</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
            </dl>

            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.IdProveedor" class="btn btn-lg btn-warning px-4 py-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-lg btn-secondary ms-3">
                    <i class="fas fa-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>
